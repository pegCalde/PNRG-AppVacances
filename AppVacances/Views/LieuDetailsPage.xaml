<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AppVacances.LieuDetailsPage">
    <ScrollView>
        <Grid BackgroundColor="White" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="0.01*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid>
                    <Label Grid.Row="1" Text="{Binding Nom}" FontSize="40" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" VerticalOptions="End"/>
                    <Frame Grid.Row="0"  Padding="0" Margin="0">
                        <Image Source="{Binding Img}" Aspect="AspectFill"/>
                    </Frame>
                    <Label Text="{Binding Temperature, StringFormat='Température: {0}'}" TextColor="DarkSlateGray" FontSize="Large" HorizontalOptions="Center"/>

                </Grid>
            </Grid>
            <Frame Grid.Row="3" Margin="0">
                <StackLayout>
                    <Label Text="Description" FontSize="18" FontAttributes="Bold" TextColor="Black"/>
                    <Label Text="{Binding Description}" FontSize="18" HorizontalTextAlignment="End" TextColor="Black"/>
                </StackLayout>
            </Frame>

        </Grid>
    </ScrollView>
</ContentPage>